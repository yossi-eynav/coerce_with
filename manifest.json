{
  "manifest_version": 2,
  "name": "Shared Host",
  "version": "0.0.1",
  "background": {
    "page": "background.html"
  },
  "icons": { 
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "options_page": "options.html",
  "browser_action": {
    "default_title": "Inactive.",
    "default_icon": "off.svg"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "background",
    "*://*/*"
  ]
}